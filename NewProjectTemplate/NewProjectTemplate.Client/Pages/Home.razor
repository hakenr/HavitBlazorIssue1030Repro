@page "/"
@inject IHxMessageBoxService MessageBoxService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<p>Welcome to your new app.</p>

<HxIcon Icon="@BootstrapIcon.HandThumbsUp" CssClass="display-3" />

@code {
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			var result = await MessageBoxService.ShowAsync("Info", "This is the text", MessageBoxButtons.OkCancel);
		}
	}
}